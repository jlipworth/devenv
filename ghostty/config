# Ghostty Configuration
# For tmux users migrating from Warp

# Font settings - using MesloLGS Nerd Font for powerline/icons
font-family = MesloLGS Nerd Font Mono
font-size = 12

# Cursor
cursor-style = block
cursor-style-blink = false

# Window appearance
window-padding-x = 8
window-padding-y = 4
window-decoration = true
macos-titlebar-style = transparent

# Theme - using a pleasant dark theme
theme = Ayu Mirage

# Shell integration
shell-integration = detect
shell-integration-features = no-cursor,no-sudo,title

# macOS specific
macos-option-as-alt = true

# Clipboard
clipboard-read = allow
clipboard-write = allow

# Scrollback
scrollback-limit = 10000

# Mouse
mouse-hide-while-typing = true
copy-on-select = clipboard

# For tmux users: let tmux handle multiplexing
# Disable Ghostty's built-in tabs/splits since tmux handles this
window-save-state = never
confirm-close-surface = false

# Keybindings - keep minimal to not conflict with tmux
# Ghostty uses super (cmd on mac) for its bindings by default
# which works well with tmux's ctrl-b prefix
keybind = super+t=new_tab
keybind = super+w=close_surface
keybind = super+n=new_window
keybind = super+shift+left=previous_tab
keybind = super+shift+right=next_tab
keybind = ctrl+j=text:\x0a

# Quick terminal toggle (like Warp's feature)
keybind = global:ctrl+backquote=toggle_quick_terminal
quick-terminal-position = top
quick-terminal-animation-duration = 0.1
